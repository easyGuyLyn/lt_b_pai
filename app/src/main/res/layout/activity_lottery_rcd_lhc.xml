<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ssc_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_gray_333333"
            android:textSize="@dimen/text_14_sp" />

        <TextView
            android:id="@+id/ssc_expect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="98dp"
            android:textColor="@color/color_gray_666666"
            android:textSize="@dimen/text_12_sp" />

        <TextView
            android:id="@+id/ssc_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/ssc_expect"
            android:textColor="@color/color_gray_666666"
            android:textSize="@dimen/text_12_sp" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="2dp">


        <LinearLayout style="@style/lhc_layout_style">

            <TextView
                android:id="@+id/lhc_ball_one_tv"
                style="@style/SmTvStytle" />

            <TextView
                android:id="@+id/lhc_animal_one_tv"
                style="@style/lhc_animal_style" />
        </LinearLayout>

        <LinearLayout style="@style/lhc_layout_style">

            <TextView
                android:id="@+id/lhc_ball_two_tv"
                style="@style/SmTvStytle" />

            <TextView
                android:id="@+id/lhc_animal_two_tv"
                style="@style/lhc_animal_style"
                 />
        </LinearLayout>

        <LinearLayout style="@style/lhc_layout_style">

            <TextView
                android:id="@+id/lhc_ball_three_tv"
                style="@style/SmTvStytle" />

            <TextView
                android:id="@+id/lhc_animal_three_tv"
                style="@style/lhc_animal_style"
                 />
        </LinearLayout>

        <LinearLayout style="@style/lhc_layout_style">

            <TextView
                android:id="@+id/lhc_ball_four_tv"
                style="@style/SmTvStytle"
                 />

            <TextView
                android:id="@+id/lhc_animal_four_tv"
                style="@style/lhc_animal_style"
                 />
        </LinearLayout>

        <LinearLayout style="@style/lhc_layout_style">

            <TextView
                android:id="@+id/lhc_ball_five_tv"
                style="@style/SmTvStytle"
                 />

            <TextView
                android:id="@+id/lhc_animal_five_tv"
                style="@style/lhc_animal_style"
                 />
        </LinearLayout>

        <LinearLayout style="@style/lhc_layout_style">

            <TextView
                android:id="@+id/lhc_ball_six_tv"
                style="@style/SmTvStytle"
                 />

            <TextView
                android:id="@+id/lhc_animal_six_tv"
                style="@style/lhc_animal_style"
                 />
        </LinearLayout>

        <LinearLayout style="@style/lhc_layout_style">

            <TextView
                android:id="@+id/lhc_ball_seven_tv"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginBottom="4dp"
                android:layout_marginEnd="-10dp"
                android:layout_marginStart="-10dp"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/black"
                android:textSize="28dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/lhc_animal_seven_tv"
                style="@style/lhc_animal_style"
                
                android:visibility="invisible" />
        </LinearLayout>


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-2dp">

            <LinearLayout style="@style/lhc_layout_style">

                <View
                    android:layout_width="1dp"
                    android:layout_height="6dp" />

                <TextView
                    android:id="@+id/plhc_ball_eight_tv"
                    style="@style/SmTvStytle"
                     />

                <TextView
                    android:id="@+id/lhc_animal_eight_tv"
                    style="@style/lhc_animal_style"
                   
                    android:visibility="visible" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="6dp" />
            </LinearLayout>

            <TextView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="end"
                android:layout_marginEnd="8dp"
                android:background="@drawable/shape_ball_green"
                android:gravity="center"
                android:text="T"
                android:textColor="@color/white"
                android:textSize="9dp" />
        </FrameLayout>


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/lable_count_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/lhc_value_count_time"
            android:textColor="@color/color_gray_999999"
            android:textSize="@dimen/text_12_sp" />


        <com.dawoo.lotterybox.view.view.Anticlockwise
            android:id="@+id/lhc_value_count_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="@color/color_gray_999999"
            android:textSize="@dimen/text_12_sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="4dp"
        android:background="@color/color_divider" />
</LinearLayout>
