<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bgColor"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_mainType"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="定位胆"
            android:textColor="@color/color_gray_333333"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/color_gray_666666" />
    </RelativeLayout>


    <com.dawoo.lotterybox.view.view.NoMoveRecycleView
        android:id="@+id/rv_play_explain_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_gray_c6c6c6"
        android:visibility="gone" />


</LinearLayout>
