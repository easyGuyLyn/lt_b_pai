<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_corn_dialog_bg"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:background="@drawable/shape_corn_dialog_title">

            <TextView
                android:id="@+id/title_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="玩法说明"
                android:textColor="@color/white"
                android:textSize="@dimen/text_title_sp" />
        </FrameLayout>

        <TextView
            android:id="@+id/lottery_palying_way_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:text="重庆时时彩-信用玩法重庆时时彩-信用玩法重庆时时彩-信用玩法重庆时时彩-信用玩法重庆时时彩-信用玩法重庆时时彩-信用玩法重庆时时彩-信用玩法"
            android:textColor="@color/color_gray_333333"
            android:textSize="@dimen/text_14_sp" />

        <TextView
            android:id="@+id/sample_note_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:text="投注示例："
            android:textColor="@color/color_close_theme"
            android:textSize="@dimen/text_16_sp"/>

        <TextView
            android:id="@+id/samle_betting_program_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:text="投注方案：03 04 05"
            android:textColor="@color/color_gray_333333"
            android:textSize="@dimen/text_14_sp" />

        <TextView
            android:id="@+id/sample_open_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:text="投注实例："
            android:textColor="@color/color_close_theme"
            android:textSize="@dimen/text_16_sp"
            />

        <TextView
            android:id="@+id/lottery_note_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:text="开奖号码：后三位03 04 05，即中后三位直选"
            android:textColor="@color/color_gray_333333"
            android:textSize="@dimen/text_14_sp" />


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/close_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@mipmap/dialog_close_icon" />
    </FrameLayout>

</LinearLayout>
