<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/bottom_yellow_normal"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="3dp">

        <LinearLayout
            android:id="@+id/bottom_1"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:paddingBottom="3dp">

            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:text="@string/total"
                android:textSize="@dimen/text_14_sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:text="@string/account_balance"
                    android:textSize="@dimen/text_12_sp" />

                <TextView
                    android:id="@+id/account_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="@dimen/dp_10"
                    android:text=""
                    android:textColor="@color/color_gray_666666"
                    android:textSize="@dimen/text_12_sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:text="@string/winning_amount"
                    android:textSize="@dimen/text_12_sp" />

                <TextView
                    android:id="@+id/winning_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="@dimen/dp_10"
                    android:text=""
                    android:textColor="@color/text_note_record_yellow"
                    android:textSize="@dimen/text_12_sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="15dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_note_arrow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/img_gray_arrow_up" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_2"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:paddingBottom="3dp">

            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:text="@string/total"
                android:textSize="@dimen/text_12_sp"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:text="@string/note_total"
                    android:textSize="@dimen/text_12_sp" />

                <TextView
                    android:id="@+id/note_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="@dimen/dp_10"
                    android:text=""
                    android:textColor="@color/text_note_record_yellow"
                    android:textSize="@dimen/text_12_sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:text="@string/yinKui"
                    android:textSize="@dimen/text_12_sp" />

                <TextView
                    android:id="@+id/yinKui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="@dimen/dp_10"
                    android:text=""
                    android:textColor="@color/history_item_green"
                    android:textSize="@dimen/text_12_sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="match_parent"></LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_3"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:paddingBottom="3dp"
            android:visibility="gone">

            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:text="@string/total"
                android:textSize="@dimen/text_12_sp"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:text="@string/note_avail"
                    android:textSize="@dimen/text_12_sp" />

                <TextView
                    android:id="@+id/note_avail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="@dimen/dp_10"
                    android:text=""
                    android:textColor="@color/text_note_record_yellow"
                    android:textSize="@dimen/text_12_sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:text="@string/rebate"
                    android:textSize="@dimen/text_12_sp" />

                <TextView
                    android:id="@+id/rebate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="@dimen/dp_10"
                    android:text=""
                    android:textColor="@color/text_note_record_yellow"
                    android:textSize="@dimen/text_12_sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="match_parent"></LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_4"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:paddingBottom="3dp"
            android:visibility="gone">

            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:text="@string/total"
                android:textSize="@dimen/text_12_sp"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:text="@string/unopen_prize_amount"
                    android:textSize="@dimen/text_12_sp" />

                <TextView
                    android:id="@+id/unopen_prize_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="@dimen/dp_10"
                    android:text=""
                    android:textColor="@color/text_note_record_yellow"
                    android:textSize="@dimen/text_12_sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_cancle_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:text="@string/cancel_order"
                    android:textSize="@dimen/text_12_sp" />

                <TextView
                    android:id="@+id/cancel_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="@dimen/dp_10"
                    android:text=""
                    android:textColor="@color/text_note_record_yellow"
                    android:textSize="@dimen/text_12_sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="match_parent"></LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
